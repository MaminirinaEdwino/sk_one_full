{% extends 'DashBoard.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Equipe {{ equipe.nom }} 
        {# {% if equipe.disponible %}
        <div class="disponible bg-success"></div>
        {% else %}
        <div class="disponible bg-warning"></div>
    {% endif %} #}
 </h1>
    <button id="add-membre-button" class="btn-secondary btn-sm btn">Ajouter membre</button>
    <div class="card" id="modale-add-membre" >
        <div class="card-header">
            Ajouter membre
        </div>
        <div class="card-body"> 
            <div >
                {{ form_start(form, {
                    attr: {
                        'action': path('app_membre_equipe_new', {'equipe': equipe.id})
                    }
                }) }}
                    {# {{ form_row(form) }} #}
                    <div class="form-group">
                        {{ form_label(form.membre) }}
                        {{ form_widget(form.membre) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.equipe) }}
                        {{ form_widget(form.equipe) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {# <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ equipe.disponible }}</td>
            </tr>
        </tbody>
    </table> #}
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Poste</th>
                    <th>Action</th>
    
                </tr>
                {% for membre in equipe.membreequipes %}
                   <tr>
                    <td>
                        {{ membre.membre.employee.nom }}
                    </td>
                    <td>
                        {{ membre.membre.employee.prenom }}
                    </td>
                    <td>
                        {% for poste in membre.membre.employee.poste %}
                            {{ poste.nom }}
                        {% endfor %}
                    </td>
                    <td>
                        <form method="post" action="{{ path('app_membre_equipe_delete', {'id': membre.id, 'equipe': equipe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membre.id) }}">
                            <button class="btn">Delete</button>
                        </form>
                    </td>
                   </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    
    {# <a href="{{ path('app_equipe_index') }}">back to list</a> #}

    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-outline-primary">Modifier</a>

    {{ include('equipe/_delete_form.html.twig') }}
{% endblock %}
