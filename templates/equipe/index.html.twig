{% extends 'DashBoard.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <h1>Equipe index</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        {# <th>Disponible</th> #}
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for equipe in equipes %}
                    <tr>
                        <td>{{ equipe.id }}</td>
                        <td>{{ equipe.nom }}</td>
                        {# <td>{{ equipe.disponible }}</td> #}
                        <td>
                            <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}">show</a>
                            <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    

   

    <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">Nouveau</a>
{% endblock %}
